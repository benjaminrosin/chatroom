<%- include('includes/head.ejs') %>
<script src=""></script>

</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="text-center p-4 shadow rounded" style="width: 300px;">
            <!-- Picture -->
            <img src="/images/logo.png" alt="Login Image" class="img-fluid mb-3" style="max-height: 150px;">

        <!-- Title -->
            <h3 class="mb-4">Login</h3>

        <!-- Form -->
            <form action="/login" method="POST">
            <!-- Username Input -->
                <div class="mb-3 form-floating">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    <label for="email" class="form-label">Email</label>
                </div>

            <!-- Password Input -->
                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <label for="password" class="form-label">Password</label>
                </div>

            <!-- Login Button -->
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

        <!-- Additional Text -->
            <p class="mt-3 text-muted">Don't have an account? <a href="/signup">Sign up</a></p>
        </div>
    </div>


<%- include('includes/end.ejs') %>