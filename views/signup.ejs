
<%- include('includes/head.ejs') %>
<script src=""></script>

</head>
<body>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center p-4 shadow rounded" style="width: 300px;">
        <!-- Picture -->
        <img src="/images/logo.png" alt="Register Image" class="img-fluid mb-3" style="max-height: 150px;">

        <!-- Title -->
        <h3 class="mb-4">Register</h3>

        <!-- Form -->
        <form action="/register" method="POST">
            <!-- Email Input -->
            <div class="mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            </div>

            <!-- First Name Input -->
            <div class="mb-3">
                <input type="text" class="form-control" id="first-name" name="first_name" placeholder="First Name" required>
            </div>

            <!-- Last Name Input -->
            <div class="mb-3">
                <input type="text" class="form-control" id="last-name" name="last_name" placeholder="Last Name" required>
            </div>

            <!-- Next Button -->
            <button type="submit" class="btn btn-primary w-100">Next</button>
        </form>

        <!-- Additional Text -->
        <p class="mt-3 text-muted">Already have an account? <a href="/login">Login</a></p>
    </div>
</div>

<%- include('includes/end.ejs') %>